{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es2020",
      "strict": true,
      "strictPropertyInitialization": false,
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
          "@core/*": ["./core/*"],
          "@domain/*": ["./domain/*"],
          // "@infra/*": ["./infra/*"],
          // "@util/*": ["./util/*"]
      }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}